{% extends 'base.html.twig' %}

{% block body %}
    <p>
    	{# if there is a validation error, display it #}
    	{% if error is defined %}
    		<p class="error_message">{{error}}</p>
    	{% endif %}

    	{# user registers via form #}
		<form name="login_attempt" action="{{ path('signup_validate') }}" method="post">
			Username: <input type="text" name="username"><br>
			Password: <input type="password" name="password"><br>
			Confirm Password: <input type="password" name="confirm_password"><br>
			Email: <input type="text" name="email"><br>
			Phone: <input type="text" name="phone"><br>
			User Type: <input type="radio" name="user_type" value="Student">Student <input type="radio" name="user_type" value="Librarian">Librarian<br>
			First Name: <input type="text" name="first_name"><br>
			Last Name: <input type="text" name="last_name"><br>
			<input type="submit" value="Sign Up">
		</form>
	</p>
{% endblock %}

